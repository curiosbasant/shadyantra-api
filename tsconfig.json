{
  "compilerOptions": {
    "target": "ES2017",
    "noImplicitAny": false,
    // "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib/typings",
    "stripInternal": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    // "noEmit": true,
    "skipLibCheck": true,
    // "resolveJsonModule": true,
    "outDir": "lib",
    // "rootDir": "src",
    "strict": true,
    "inlineSourceMap": true,
  },
  "include": [
    "src",
    "test"
  ]
}